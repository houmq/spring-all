<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.summer.oauth.dao.AuthDao">

    <select id="getUserByUserName" parameterType="java.lang.String" resultType="com.summer.common.entity.UsersEntity">
        SELECT * FROM ps_users WHERE name = #{userName}
    </select>

    <select id="loadPermissionArray" resultType="com.summer.common.entity.RoleEntity">
        SELECT * FROM user_roles WHERE name IN
        <foreach collection="array" item="item" open="(" separator="," close=")">
            #{item}
        </foreach>
    </select>

</mapper>